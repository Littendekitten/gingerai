const datasetEN = {
  greeting: [["hi","Hey! How are you?"], ["hello","Hello there!"], ["hey","Hey there!"], ["good morning","Good morning! Ready for a new day?"], ["good evening","Good evening! How was your day?"], ["yo","Yo! Great to see you!"]],
  status: [["how are you","I’m doing great! And you?"], ["i’m fine","Glad to hear that!"], ["not bad","Not bad at all!"], ["tired","Take some rest, you’ll feel better."], ["bored","Maybe try something fun?"], ["happy","Great! Keep smiling!"]],
