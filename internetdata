  jokes: [["tell a joke","Why don’t skeletons fight each other? 💀😂"], ["funny","Haha, here’s a joke for you!"]],
  compliment: [["good job","Thank you!"], ["nice","Nice of you to say!"]],
  bye: [["bye","Bye! See you later!"], ["good night","Good night!"]]
